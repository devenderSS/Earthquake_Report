<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <gradient android:startColor="#6f7977" android:endColor="#7a807e" android:type="linear" />
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:right=".5dp" android:left="1dp" android:bottom="2dp"  android:drawable="@color/colorPrimary">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
</layer-list>